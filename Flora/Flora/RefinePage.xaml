<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flora.RefinePage">
    <ContentPage.Content>
        <StackLayout>
            <Label x:Name="RefineInstructions"
                   Text="Please select from the options below."
                   VerticalOptions="CenterAndExpand" 
                   HorizontalOptions="CenterAndExpand" />
            <Button x:Name="OptionOneButton"
                    Margin="0,25,0,0"
                    Text="Option One"
                    Clicked="OptionOneButton_Clicked" />
            <Button x:Name="OptionTwoButton"
                    Margin="0,25,0,0"
                    Text="Option Two"
                    Clicked="OptionTwoButton_Clicked" />
            <Button x:Name="OptionThreeButton"
                    Margin="0,25,0,0"
                    Text="Option Three"
                    Clicked="OptionThreeButton_Clicked" />
            <Button x:Name="ViewResultButton"
                    Margin="0,25,0,0"
                    Text="View Result"
                    Clicked="ViewResultButton_Clicked" />
            <Button x:Name="StartOverButton"
                    Margin="0,25,0,0"
                    Text="Start Over"
                    Clicked="StartOverButton_Clicked" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>