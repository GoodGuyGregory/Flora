<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flora.DirectLookupGenusPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="Start">
                <Label x:Name="DirectLookupInstructions"
                       HorizontalTextAlignment="Start"
                       Text="If you know the plant's genus, go ahead and select it below. Otherwise, click Refine to search within this family." />
            </StackLayout>

            <StackLayout VerticalOptions="CenterAndExpand">
                <Button x:Name="ViewSpeciesButton"
                        Margin="0,25,0,0"
                        Text="View Species"
                        Clicked="ViewSpeciesButton_Clicked" />
                <Button x:Name="RefineButton"
                        Margin="0,25,0,0"
                        Text="Refine Results"
                        Clicked="RefineButton_Clicked" />
            </StackLayout>

            <StackLayout VerticalOptions="End">
                <Button x:Name="StartOverButton"
                        Text="Start Over"
                        Clicked="StartOverButton_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>