<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flora.DirectLookupSpeciesPage">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="Start">
                <Label x:Name="DirectLookupInstructions"   
                       HorizontalTextAlignment="Start"
                       Text="If you know the plant's species, go ahead and select it below. Otherwise, click Refine to search within this genus." />
            </StackLayout>

            <StackLayout VerticalOptions="CenterAndExpand">
                <Button x:Name="ViewResultButton"
                        Margin="0,25,0,0"
                        Text="View Result"
                        Clicked="ViewResultButton_Clicked" />
                <Button x:Name="RefineButton"
                        Margin="0,25,0,0"
                        Text="Refine Results"
                        Clicked="RefineButton_Clicked" />
            </StackLayout>

            <StackLayout VerticalOptions="End">
                <Button x:Name="StartOverButton"
                        Text="Start Over"
                        Clicked="StartOverButton_Clicked" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>