<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Flora.DirectLookupFamilyPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Start">
            <Label x:Name="DirectLookupInstructions"
                       Text="Select the plant's Family."/>
            <ListView x:Name="listViewFamily" ItemSelected="Handle_ItemSelected">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell Text="{Binding familyName}"/>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>